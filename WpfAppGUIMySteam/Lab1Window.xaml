<Window x:Class="WpfAppGUIMySteam.Lab1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЛР-1: Управление коллекцией аниме"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#0f3460">

    <Window.Resources>
        <!-- Стили в том же японском стиле -->
        <Style x:Key="AnimeCard" TargetType="Border">
            <Setter Property="Background" Value="#1a1a2e"/>
            <Setter Property="BorderBrush" Value="#e94560"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="AnimeButton" TargetType="Button">
            <Setter Property="Background" Value="#e94560"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="StatusIndicator" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Стиль для ComboBox -->
        <Style x:Key="AnimeComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#e94560"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Margin" Value="0,2,0,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Фон -->
        <Image Source="/Images/yakuza-0-goro-majima-kiryu-kazuma.jpg" 
               Stretch="UniformToFill" Opacity="0.3"/>

        <DockPanel>
            <!-- Заголовок -->
            <Border DockPanel.Dock="Top" 
                    Background="#1a1a2e" 
                    Padding="15" 
                    BorderThickness="0,0,0,2" 
                    BorderBrush="#e94560">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Назад" 
                            Style="{StaticResource AnimeButton}"
                            Command="{Binding BackCommand}"
                            Background="#16213e"
                            Grid.Column="0"/>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="アニメコレクション" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="ЛР-1: Управление коллекцией аниме" 
                                   Foreground="#f8c3af" 
                                   FontSize="11"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Всего аниме: " Foreground="White" FontSize="12"/>
                        <TextBlock Text="{Binding TotalAnimeCount}" Foreground="#e94560" FontSize="12" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка - операции с коллекцией -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">

                        <!-- Группа: Управление коллекцией -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📁 Управление коллекцией" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,15"/>

                                <!-- Операция 1: Добавить аниме -->
                                <Border Background="#16213e" CornerRadius="6" Padding="10" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="➕ Добавить аниме" 
                                                   Foreground="White" 
                                                   FontWeight="Bold" 
                                                   Margin="0,0,0,8"/>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,5,0">
                                                <TextBlock Text="Название" Foreground="#cccccc" FontSize="12"/>
                                                <TextBox Text="{Binding NewAnimeTitle}" 
                                                         Background="#1a1a2e" 
                                                         Foreground="White" 
                                                         BorderBrush="#e94560"
                                                         Margin="0,2,0,8"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="5,0,0,0">
                                                <TextBlock Text="Жанр" Foreground="#cccccc" FontSize="12"/>
                                                <ComboBox Style="{StaticResource AnimeComboBox}"
                                                          ItemsSource="{Binding Genres}"
                                                          SelectedItem="{Binding SelectedGenre}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,5,0">
                                                <TextBlock Text="Год" Foreground="#cccccc" FontSize="12"/>
                                                <TextBox Text="{Binding NewAnimeYear}" 
                                                         Background="#1a1a2e" 
                                                         Foreground="White" 
                                                         BorderBrush="#e94560"
                                                         Margin="0,2,0,8"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="5,0,0,0">
                                                <TextBlock Text="Серии" Foreground="#cccccc" FontSize="12"/>
                                                <TextBox Text="{Binding NewAnimeEpisodes}" 
                                                         Background="#1a1a2e" 
                                                         Foreground="White" 
                                                         BorderBrush="#e94560"
                                                         Margin="0,2,0,8"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Индикаторы Pre/Post -->
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,8">
                                            <TextBlock Text="Pre:" Foreground="#cccccc" FontSize="12" VerticalAlignment="Center"/>
                                            <Border Style="{StaticResource StatusIndicator}" 
                                                    Background="{Binding AddPreConditionStatus}"/>
                                            <TextBlock Text="Post:" Foreground="#cccccc" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            <Border Style="{StaticResource StatusIndicator}" 
                                                    Background="{Binding AddPostConditionStatus}"/>
                                        </StackPanel>

                                        <!-- Кнопки -->
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Добавить" 
                                                    Style="{StaticResource AnimeButton}"
                                                    Command="{Binding AddAnimeCommand}"
                                                    Margin="0,0,5,0"/>
                                            <Button Content="Контракт" 
                                                    Style="{StaticResource AnimeButton}"
                                                    Background="#16213e"
                                                    Command="{Binding ShowAddContractCommand}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Операция 2: Удалить аниме -->
                                <Border Background="#16213e" CornerRadius="6" Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="🗑️ Удалить аниме" 
                                                   Foreground="White" 
                                                   FontWeight="Bold" 
                                                   Margin="0,0,0,8"/>

                                        <TextBlock Text="Название аниме" Foreground="#cccccc" FontSize="12"/>
                                        <ComboBox Style="{StaticResource AnimeComboBox}"
                                                  ItemsSource="{Binding AnimeTitles}"
                                                  SelectedItem="{Binding AnimeToRemove}"/>

                                        <!-- Индикаторы Pre/Post -->
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,8">
                                            <TextBlock Text="Pre:" Foreground="#cccccc" FontSize="12" VerticalAlignment="Center"/>
                                            <Border Style="{StaticResource StatusIndicator}" 
                                                    Background="{Binding RemovePreConditionStatus}"/>
                                            <TextBlock Text="Post:" Foreground="#cccccc" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            <Border Style="{StaticResource StatusIndicator}" 
                                                    Background="{Binding RemovePostConditionStatus}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Удалить" 
                                                    Style="{StaticResource AnimeButton}"
                                                    Command="{Binding RemoveAnimeCommand}"
                                                    Margin="0,0,5,0"/>
                                            <Button Content="Контракт" 
                                                    Style="{StaticResource AnimeButton}"
                                                    Background="#16213e"
                                                    Command="{Binding ShowRemoveContractCommand}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- Правая колонка - поиск и отображение -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">

                        <!-- Группа: Поиск и фильтрация -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="🔍 Поиск и фильтрация" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,15"/>

                                <!-- Операция 3: Поиск по жанру -->
                                <Border Background="#16213e" CornerRadius="6" Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="🎭 Поиск по жанру" 
                                                   Foreground="White" 
                                                   FontWeight="Bold" 
                                                   Margin="0,0,0,8"/>

                                        <TextBlock Text="Жанр для поиска" Foreground="#cccccc" FontSize="12"/>
                                        <ComboBox Style="{StaticResource AnimeComboBox}"
                                                  ItemsSource="{Binding Genres}"
                                                  SelectedItem="{Binding SearchGenre}"/>

                                        <!-- Индикаторы Pre/Post -->
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,8">
                                            <TextBlock Text="Pre:" Foreground="#cccccc" FontSize="12" VerticalAlignment="Center"/>
                                            <Border Style="{StaticResource StatusIndicator}" 
                                                    Background="{Binding SearchPreConditionStatus}"/>
                                            <TextBlock Text="Post:" Foreground="#cccccc" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            <Border Style="{StaticResource StatusIndicator}" 
                                                    Background="{Binding SearchPostConditionStatus}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Найти" 
                                                    Style="{StaticResource AnimeButton}"
                                                    Command="{Binding SearchByGenreCommand}"
                                                    Margin="0,0,5,0"/>
                                            <Button Content="Контракт" 
                                                    Style="{StaticResource AnimeButton}"
                                                    Background="#16213e"
                                                    Command="{Binding ShowSearchContractCommand}"/>
                                        </StackPanel>

                                        <!-- Результаты поиска -->
                                        <TextBlock Text="Результаты поиска:" 
                                                   Foreground="#cccccc" 
                                                   FontSize="12" 
                                                   Margin="0,10,0,5"/>
                                        <ItemsControl ItemsSource="{Binding SearchResults}" 
                                                      Background="#1a1a2e"
                                                      BorderBrush="#e94560"
                                                      BorderThickness="1"
                                                      Padding="5"
                                                      Height="80"
                                                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#16213e" 
                                                            Margin="1" 
                                                            Padding="3" 
                                                            CornerRadius="2">
                                                        <TextBlock Text="{Binding DisplayInfo}" 
                                                                   Foreground="White" 
                                                                   FontSize="12"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Группа: Отображение коллекции -->
                        <Border Style="{StaticResource AnimeCard}">
                            <StackPanel>
                                <TextBlock Text="📚 Вся коллекция" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="{Binding CollectionStatus}" 
                                           Foreground="#cccccc" 
                                           FontSize="12"
                                           Margin="0,0,0,5"/>

                                <ItemsControl ItemsSource="{Binding AllAnime}" 
                                              Background="#16213e"
                                              BorderBrush="#e94560"
                                              BorderThickness="1"
                                              Padding="5"
                                              Height="200"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#1a1a2e" 
                                                    Margin="1" 
                                                    Padding="5" 
                                                    CornerRadius="3">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding DisplayInfo}" 
                                                               Foreground="White" 
                                                               FontSize="12"/>
                                                    <TextBlock Text="⦿" 
                                                               Foreground="#e94560" 
                                                               FontSize="12"
                                                               Grid.Column="1"
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
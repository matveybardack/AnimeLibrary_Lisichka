<Window x:Class="WpfAppGUIMySteam.Lab1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление коллекцией"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#0f3460">

    <Grid>
        <!-- Фон -->
        <Image Source="/Images/yakuza-0-goro-majima-kiryu-kazuma.jpg" 
               Stretch="UniformToFill" Opacity="0.3"/>

        <DockPanel>
            <!-- Заголовок -->
            <Border DockPanel.Dock="Top" 
                    Background="#1a1a2e" 
                    Padding="15" 
                    BorderThickness="0,0,0,2" 
                    BorderBrush="#e94560">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Назад" 
                            Style="{StaticResource AnimeButton}"
                            Command="{Binding BackCommand}"
                            Background="#16213e"
                            Grid.Column="0"/>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="アニメ図書館" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Управление коллекцией" 
                                   Foreground="#f8c3af" 
                                   FontSize="12"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Всего аниме: " Foreground="White" FontSize="14"/>
                        <TextBlock Text="{Binding TotalAnimeCount}" Foreground="#e94560" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка - операции -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">

                        <!-- Операция 1: Добавить аниме -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📥 Добавить аниме в библиотеку" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,5,0">
                                        <TextBlock Text="Название" Foreground="#cccccc" FontSize="14"/>
                                        <TextBox Style="{StaticResource AnimeTextBox}"
                                                 Text="{Binding NewAnimeTitle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="5,0,0,0">
                                        <TextBlock Text="Жанр" Foreground="#cccccc" FontSize="14"/>
                                        <ComboBox Style="{StaticResource AnimeComboBox}"
                                                  ItemContainerStyle="{StaticResource AnimeComboBoxItem}"
                                                  ItemsSource="{Binding Genres}"
                                                  SelectedItem="{Binding SelectedGenre}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,5,0">
                                        <TextBlock Text="Год выхода" Foreground="#cccccc" FontSize="14"/>
                                        <TextBox Style="{StaticResource AnimeTextBox}"
                                                 Text="{Binding NewAnimeYear}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="5,0,0,0">
                                        <TextBlock Text="Рейтинг (0-10)" Foreground="#cccccc" FontSize="14"/>
                                        <TextBox Style="{StaticResource AnimeTextBox}"
                                                 Text="{Binding NewAnimeRating}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,5,0">
                                        <TextBlock Text="Количество серий" Foreground="#cccccc" FontSize="14"/>
                                        <TextBox Style="{StaticResource AnimeTextBox}"
                                                 Text="{Binding NumberOfEpisodes}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Кнопки -->
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Добавить" 
                                            Style="{StaticResource AnimeButton}"
                                            Command="{Binding AddAnimeCommand}"
                                            Margin="0,0,5,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Операция 2: Поиск по жанру и рейтингу -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="🔍 Поиск по названию" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                        <TextBlock Text="Название:" Foreground="#cccccc" FontSize="14"/>
                                        <TextBox Style="{StaticResource AnimeTextBox}"
                                                 Text="{Binding Title}"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Найти" 
                                            Style="{StaticResource AnimeButton}"
                                            Command="{Binding SearchAnimeCommand}"
                                            Margin="0,0,5,0"/>
                                </StackPanel>

                                <!-- Результаты поиска в DataGrid -->
                                <TextBlock Text="Результаты поиска:" 
                                           Foreground="#cccccc" 
                                           FontSize="14" 
                                           Margin="0,10,0,5"/>
                                <DataGrid ItemsSource="{Binding SearchResults}" 
                                         Style="{StaticResource AnimeDataGrid}"
                                         Height="150"
                                         ColumnHeaderStyle="{StaticResource DataGridColumnHeader}"
                                         CellStyle="{StaticResource DataGridCell}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="250"/>
                                        <DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" Width="150"/>
                                        <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="100"/>
                                        <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}" Width="100"/>
                                        <DataGridTextColumn Header="Серии" Binding="{Binding Episodes}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- Правая колонка - операции и коллекция -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">

                        <!-- Вся коллекция аниме -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📚 Вся коллекция аниме" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="{Binding CollectionStatus}" 
                                           Foreground="#cccccc" 
                                           FontSize="14"
                                           Margin="0,0,0,5"/>

                                <!-- Коллекция аниме в DataGrid -->
                                <DataGrid ItemsSource="{Binding AllAnime}" 
                                         Style="{StaticResource AnimeDataGrid}"
                                         Height="507"
                                         ColumnHeaderStyle="{StaticResource DataGridColumnHeader}"
                                         CellStyle="{StaticResource DataGridCell}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="250"/>
                                        <DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" Width="150"/>
                                        <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="100"/>
                                        <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}" Width="100"/>
                                        <DataGridTextColumn Header="Серии" Binding="{Binding Episodes}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
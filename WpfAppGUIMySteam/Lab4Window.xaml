<Window x:Class="WpfAppGUIMySteam.Lab4Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Планировщик просмотра аниме"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#0f3460">

    <Grid>
        <!-- Фон -->
        <Image Source="/Images/yakuza-0-goro-majima-kiryu-kazuma.jpg" 
               Stretch="UniformToFill" Opacity="0.3"/>

        <DockPanel>
            <!-- Заголовок -->
            <Border DockPanel.Dock="Top" 
                    Background="#1a1a2e" 
                    Padding="15" 
                    BorderThickness="0,0,0,2" 
                    BorderBrush="#e94560">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Назад" 
                            Style="{StaticResource AnimeButton}"
                            Command="{Binding BackCommand}"
                            Background="#16213e"
                            Grid.Column="0"/>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="視聴プランナー" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Планировщик просмотра" 
                                   Foreground="#f8c3af" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка - настройки -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">

                        <!-- Выбор аниме -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📺 Выбор аниме" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Выберите аниме для планирования:" 
                                               Foreground="#cccccc" 
                                               FontSize="14"/>
                                    <ComboBox Style="{StaticResource AnimeComboBox}"
                                              ItemsSource="{Binding AvailableAnime}"
                                              DisplayMemberPath="Title"
                                              SelectedItem="{Binding SelectedAnime}"
                                              Height="30"/>
                                </StackPanel>

                                <!-- Информация о выбранном аниме -->
                                <Border Background="#16213e" 
                                        BorderBrush="#e94560" 
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Padding="10"
                                        Visibility="{Binding SelectedAnimeInfoVisibility}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding SelectedAnime.Title}" 
                                                   Foreground="#e94560" 
                                                   FontWeight="Bold" 
                                                   FontSize="14"/>
                                        <Grid Margin="0,5,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Жанр:" Foreground="#cccccc" FontSize="14"/>
                                                <TextBlock Text="{Binding SelectedAnime.Genre}" Foreground="White" FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Год:" Foreground="#cccccc" FontSize="14"/>
                                                <TextBlock Text="{Binding SelectedAnime.Year}" Foreground="White" FontSize="12"/>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Margin="0,5,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Всего серий:" Foreground="#cccccc" FontSize="14"/>
                                                <TextBlock Text="{Binding SelectedAnime.Episodes}" Foreground="White" FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Рейтинг:" Foreground="#cccccc" FontSize="14"/>
                                                <TextBlock Text="{Binding SelectedAnime.Rating}" Foreground="White" FontSize="12"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Настройки расписания -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="⚙️ Настройки расписания" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Серий в день -->
                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,5,0">
                                        <TextBlock Text="Серий в день:" Foreground="#cccccc" FontSize="14"/>
                                        <TextBox Style="{StaticResource AnimeTextBox}"
                                                 Text="{Binding EpisodesPerDay}"/>
                                    </StackPanel>

                                    <!-- Начальный день -->
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="5,0,0,0">
                                        <TextBlock Text="Начальный день:" Foreground="#cccccc" FontSize="14"/>
                                        <ComboBox Style="{StaticResource AnimeComboBox}"
                                                  ItemsSource="{Binding DaysOfWeek}"
                                                  SelectedItem="{Binding StartDay}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Кнопка расчета -->
                                <Button Content="📅 Рассчитать расписание" 
                                        Style="{StaticResource AnimeButton}"
                                        Command="{Binding CalculateScheduleCommand}"
                                        Margin="0,10,0,0"
                                        Height="35"/>
                            </StackPanel>
                        </Border>

                        <!-- Статистика -->
                        <Border Style="{StaticResource AnimeCard}" 
                                Visibility="{Binding StatisticsVisibility}"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📊 Статистика просмотра" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Общее время просмотра:" Foreground="#cccccc" FontSize="14"/>
                                        <TextBlock Text="{Binding TotalViewingTime}" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Необходимо недель:" Foreground="#cccccc" FontSize="14"/>
                                        <TextBlock Text="{Binding TotalWeeks}" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Всего дней просмотра:" Foreground="#cccccc" FontSize="14"/>
                                        <TextBlock Text="{Binding TotalViewingDays}" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                                        <TextBlock Text="Среднее в день:" Foreground="#cccccc" FontSize="14"/>
                                        <TextBlock Text="{Binding AveragePerDay}" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- Правая колонка - расписание -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">

                        <!-- Детальное расписание -->
                        <Border Style="{StaticResource AnimeCard}" 
                                Visibility="{Binding ScheduleVisibility}"
                                Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="🗓️ Детальное расписание" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="Расписание по дням недели:" 
                                           Foreground="#cccccc" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <!-- Расписание в DataGrid -->
                                <DataGrid ItemsSource="{Binding Schedule}" 
                                         Style="{StaticResource AnimeDataGrid}"
                                         Height="499"
                                         ColumnHeaderStyle="{StaticResource DataGridColumnHeader}"
                                         CellStyle="{StaticResource DataGridCell}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Неделя" Binding="{Binding DayOfWeek}" Width="100"/>
                                        <DataGridTextColumn Header="День недели" Binding="{Binding DayOfWeek}" Width="200"/>
                                        <DataGridTextColumn Header="Номера серий" Binding="{Binding Episodes}" Width="100"/>
                                        <DataGridTextColumn Header="Количество" Binding="{Binding EpisodeCount}" Width="100"/>
                                        <DataGridTextColumn Header="Время" Binding="{Binding ViewingTime}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
<Window x:Class="WpfAppGUIMySteam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anime Library"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- ТЁМНАЯ КАРТИНКА НА ФОН -->
        <Image Source="/Images/yakuza-0-goro-majima-kiryu-kazuma.jpg" 
               Stretch="UniformToFill" Margin="0,83,0,0" />

        <DockPanel>
            <!-- Заголовок -->
            <Border DockPanel.Dock="Top" 
                    Background="#1a1a2e" 
                    Padding="20" 
                    BorderThickness="0,0,0,2" 
                    BorderBrush="#b32b43">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="アニメ研究所" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               FontFamily="Segoe UI"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Anime Library" 
                               Foreground="#f8c3af" 
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Основной контент -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel HorizontalAlignment="Center">

                    <!-- ЛР-1 -->
                    <Border Style="{StaticResource TraditionalCard}" Margin="0,50,0,15" Width="250
                            ">
                        <Button Style="{StaticResource TraditionalButton}" Command="{Binding OpenLab1Command}">
                            <StackPanel>
                                <TextBlock Text="一" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           Foreground="#e94560"/>
                                <TextBlock Text="Управление коллекцией" 
                                           Margin="0,8,0,6"
                                           HorizontalAlignment="Center"
                                           FontWeight="Bold"/>
                                <Rectangle Height="1" 
                                           Fill="#e94560" 
                                           Margin="0,3" 
                                           Width="130"/>
                                <TextBlock Text="Добавление и поиск" 
                                           TextWrapping="Wrap" 
                                           Width="160"
                                           TextAlignment="Center"
                                           Foreground="#cccccc"
                                           FontSize="10"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- ЛР-3 -->
                    <Border Style="{StaticResource TraditionalCard}" Margin="0,0,0,15">
                        <Button Style="{StaticResource TraditionalButton}" Command="{Binding OpenLab3Command}">
                            <StackPanel>
                                <TextBlock Text="二"
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           Foreground="#e94560"/>
                                <TextBlock Text="Подбор произведения" 
                                           Margin="0,8,0,6"
                                           HorizontalAlignment="Center"
                                           FontWeight="Bold"/>
                                <Rectangle Height="1" 
                                           Fill="#e94560" 
                                           Margin="0,3" 
                                           Width="130"/>
                                <TextBlock Text="Фильтры и сортировка"
                                           TextWrapping="Wrap" 
                                           Width="160"
                                           TextAlignment="Center"
                                           Foreground="#cccccc"
                                           FontSize="10"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- ЛР-4 -->
                    <Border Style="{StaticResource TraditionalCard}" Margin="0,0,0,15">
                        <Button Style="{StaticResource TraditionalButton}" Command="{Binding OpenLab4Command}">
                            <StackPanel>
                                <TextBlock Text="三" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           Foreground="#e94560"/>
                                <TextBlock Text="Планировщик просмотра" 
                                           Margin="0,8,0,6" 
                                           HorizontalAlignment="Center"
                                           FontWeight="Bold"/>
                                <Rectangle Height="1" 
                                           Fill="#e94560" 
                                           Margin="0,3" 
                                           Width="130"/>
                                <TextBlock Text="Расписание и статистика" 
                                           TextWrapping="Wrap" 
                                           Width="160"
                                           TextAlignment="Center"
                                           Foreground="#cccccc"
                                           FontSize="10"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border Style="{StaticResource TraditionalCard}" Margin="0,50,0,15" Cursor="">
                        <Button Style="{StaticResource TraditionalButton}" Command="{Binding ExitCommand}">
                            <StackPanel>
                                <TextBlock Text="終" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           Foreground="#e94560"/>
                                <TextBlock Text="Выход" 
                                           Margin="0,8,0,6" 
                                           HorizontalAlignment="Center"
                                           FontWeight="Bold"/>
                                <Rectangle Height="1" 
                                           Fill="#e94560" 
                                           Margin="0,3" 
                                           Width="130"/>
                                <TextBlock Text="Завершить работу" 
                                           TextWrapping="Wrap" 
                                           Width="160"
                                           TextAlignment="Center"
                                           Foreground="#cccccc"
                                           FontSize="10"/>
                            </StackPanel>
                        </Button>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
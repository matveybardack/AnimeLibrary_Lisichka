<Window x:Class="WpfAppGUIMySteam.Lab3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подбор произведения"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#0f3460">

    <Grid>
        <!-- Фон -->
        <Image Source="/Images/yakuza-0-goro-majima-kiryu-kazuma.jpg" 
               Stretch="UniformToFill" Opacity="0.3"/>

        <DockPanel>
            <!-- Заголовок -->
            <Border DockPanel.Dock="Top" 
                    Background="#1a1a2e" 
                    Padding="15" 
                    BorderThickness="0,0,0,2" 
                    BorderBrush="#e94560">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Назад" 
                            Style="{StaticResource AnimeButton}"
                            Command="{Binding BackCommand}"
                            Background="#16213e"
                            Grid.Column="0"/>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="作品の選択" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Подбор произведения" 
                                   Foreground="#f8c3af" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка - фильтры -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">

                        <!-- Расширенный фильтр -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="🔍 Расширенный фильтр" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Тип -->
                                    <TextBlock Text="Тип:" 
                                               Foreground="#cccccc" 
                                               FontSize="14"
                                               Grid.Row="0" Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,8"/>
                                    <ComboBox Style="{StaticResource AnimeComboBox}"
                                              ItemContainerStyle="{StaticResource AnimeComboBoxItem}"
                                              ItemsSource="{Binding ContentTypes}"
                                              SelectedItem="{Binding SelectedContentType}"
                                              Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"
                                              Margin="0,0,0,8"/>

                                    <!-- Жанр -->
                                    <TextBlock Text="Жанр:" 
                                               Foreground="#cccccc" 
                                               FontSize="14"
                                               Grid.Row="1" Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,8"/>
                                    <ComboBox Style="{StaticResource AnimeComboBox}"
                                              ItemsSource="{Binding Genres}"
                                              SelectedItem="{Binding SelectedGenre}"
                                              Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                                              Margin="0,0,0,8"/>

                                    <!-- Год -->
                                    <TextBlock Text="Год:" 
                                               Foreground="#cccccc" 
                                               FontSize="14"
                                               Grid.Row="2" Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,8"/>
                                    <ComboBox ItemsSource="{Binding ComparisonOperators}"
                                              SelectedItem="{Binding YearOperator}"
                                              Grid.Row="2" Grid.Column="1"
                                              Margin="0,0,5,8"/>
                                    <TextBox Style="{StaticResource AnimeTextBox}"
                                             Text="{Binding FilterYear}"
                                             Grid.Row="2" Grid.Column="2"
                                             Margin="0,0,0,8"/>

                                    <!-- Рейтинг -->
                                    <TextBlock Text="Рейтинг:" 
                                               Foreground="#cccccc" 
                                               FontSize="14"
                                               Grid.Row="3" Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,8"/>
                                    <ComboBox ItemsSource="{Binding ComparisonOperators}"
                                              SelectedItem="{Binding RatingOperator}"
                                              Grid.Row="3" Grid.Column="1"
                                              Margin="0,0,5,8"/>
                                    <TextBox Style="{StaticResource AnimeTextBox}"
                                             Text="{Binding FilterRating}"
                                             Grid.Row="3" Grid.Column="2"
                                             Margin="0,0,0,8"/>

                                    <!-- Количество серий -->
                                    <TextBlock Text="Серии:" 
                                               Foreground="#cccccc" 
                                               FontSize="14"
                                               Grid.Row="4" Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,8"/>
                                    <ComboBox ItemsSource="{Binding ComparisonOperators}"
                                              SelectedItem="{Binding EpisodesOperator}"
                                              Grid.Row="4" Grid.Column="1"
                                              Margin="0,0,5,8"/>
                                    <TextBox Style="{StaticResource AnimeTextBox}"
                                             Text="{Binding FilterEpisodes}"
                                             Grid.Row="4" Grid.Column="2"
                                             Margin="0,0,0,8"/>

                                    <!-- Кнопки управления -->
                                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4"
                                                Orientation="Horizontal"
                                                Margin="0,10,0,0">
                                        <Button Content="Применить фильтр" 
                                                Style="{StaticResource AnimeButton}"
                                                Command="{Binding ApplyFilterCommand}"
                                                Margin="0,0,10,0"/>
                                        <Button Content="Сбросить" 
                                                Style="{StaticResource AnimeButton}"
                                                Background="#16213e"
                                                Command="{Binding ResetFilterCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Активные фильтры -->
                        <Border Style="{StaticResource AnimeCard}" 
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="🎯 Активные фильтры" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <TextBox Text="{Binding ActiveFiltersText, Mode=OneWay}"
                                         Style="{StaticResource AnimeTextBox}"
                                         Height="80"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         IsReadOnly="True"
                                         Background="#16213e"
                                         BorderBrush="#e94560"
                                         FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <!-- Статистика -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📊 Статистика" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Найдено:" Foreground="#cccccc" FontSize="14"/>
                                        <TextBlock Text="{Binding FilteredCount}" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Всего:" Foreground="#cccccc" FontSize="14"/>
                                        <TextBlock Text="{Binding TotalCount}" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="Ср. рейтинг:" Foreground="#cccccc" FontSize="14"/>
                                        <TextBlock Text="{Binding AverageRating}" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                                        <TextBlock Text="Ср. серий:" Foreground="#cccccc" FontSize="14"/>
                                        <TextBlock Text="{Binding AverageEpisodes}" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- Правая колонка - анализ цикла -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📚 Вся коллекция аниме" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="{Binding CollectionStatus}" 
                                           Foreground="#cccccc" 
                                           FontSize="14"
                                           Margin="0,0,0,5"/>

                                <!-- Коллекция аниме в DataGrid -->
                                <DataGrid ItemsSource="{Binding AllAnime}" 
                                         Style="{StaticResource AnimeDataGrid}"
                                         Height="507"
                                         ColumnHeaderStyle="{StaticResource DataGridColumnHeader}"
                                         CellStyle="{StaticResource DataGridCell}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="250"/>
                                        <DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" Width="150"/>
                                        <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="100"/>
                                        <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}" Width="100"/>
                                        <DataGridTextColumn Header="Серии" Binding="{Binding Episodes}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>